<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>se.kth.it</groupId>
  <artifactId>success</artifactId>
  <version>3.1.0</version>
  <packaging>jar</packaging>

  <properties>
    <java.version>11</java.version>
  </properties>

  <distributionManagement>
    <repository>
      <id>integration</id>
      <url>https://pkgs.dev.azure.com/kth-integration/_packaging/integration/maven/v1</url>
    </repository>
  </distributionManagement>

  <repositories>
    <repository>
      <id>integration</id>
      <url>https://pkgs.dev.azure.com/kth-integration/_packaging/integration/maven/v1</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>integration</id>
      <url>https://pkgs.dev.azure.com/kth-integration/_packaging/integration/maven/v1</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

  <build>
    <defaultGoal>verify</defaultGoal>

    <plugins>
      <plugin>
        <groupId>se.kth</groupId>
        <artifactId>dockerconf-maven-plugin</artifactId>
        <version>2.0.0</version>
        <configuration>
          <imageName>test</imageName>
        </configuration>
        <executions>
          <execution>
            <phase>process-sources</phase>
            <goals>
              <goal>validate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
